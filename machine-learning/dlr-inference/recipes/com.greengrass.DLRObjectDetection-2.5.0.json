{
  "RecipeFormatVersion": "2020-01-25",
  "ComponentName": "com.greengrass.DLRObjectDetection",
  "ComponentVersion": "2.5.0",
  "ComponentType": "aws.greengrass.generic",
  "ComponentDescription": "Sample recipe - Object detection inference using DLR and the yolo3 darknet voc model.",
  "ComponentPublisher": "AWS",
  "ComponentConfiguration": {
    "DefaultConfiguration": {
      "accessControl": {
        "aws.greengrass.ipc.mqttproxy": {
          "com.greengrass.DLRObjectDetection:mqttproxy:1": {
            "policyDescription": "Allows access to publish via topic ml/dlr/object-detection.",
            "operations": [
              "aws.greengrass#PublishToIoTCore"
            ],
            "resources": [
              "ml/dlr/object-detection"
            ]
          }
        }
      },
      "ImageName": "objects.jpg",
      "InferenceInterval": "3600",
      "PublishResultsOnTopic": "ml/dlr/object-detection"
    }
  },
  "ComponentDependencies": {
    "com.greengrass.DLRObjectDetection.Model": {
      "VersionRequirement": ">=2.5.0",
      "DependencyType": "HARD"
    },
    "com.greengrass.DLR": {
      "VersionRequirement": ">=1.6.0",
      "DependencyType": "HARD"
    }
  },
  "Manifests": [
    {
      "Platform": {
        "os": "windows"
      },
      "Lifecycle": {
        "setEnv": {
          "DLR_OD_MODEL_DIR": "{com.greengrass.DLRObjectDetection.Model:artifacts:decompressedPath}\\DLR-yolo3-win-cpu-ObjectDetection",
          "DEFAULT_DLR_OD_IMAGE_DIR": "{artifacts:decompressedPath}/object_detection/sample_images/"
        },
        "Run": "{com.greengrass.DLR:configuration:/MLRootPath}\\Library\\bin\\conda activate {com.greengrass.DLR:configuration:/MLRootPath}\\envs\\greengrass_ml_dlr_windows & python -u {artifacts:decompressedPath}/object_detection/inference.py"
      },
      "Artifacts": [
        {
          "Uri": "s3://$BUCKETNAME$/artifacts/com.greengrass.DLRObjectDetection/$COMPONENT_VERSION$/object_detection.zip",
          "Unarchive": "ZIP",
          "Permission": {
            "Read": "OWNER",
            "Execute": "NONE"
          }
        }
      ]
    }
  ],
  "Lifecycle": {}
}